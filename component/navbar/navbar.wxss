/* component/navbar/navbar.wxss */
/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background-color: #4573ff;
  color: #fff;
  z-index: 999;
}
/* 标题要居中 */
.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 15rpx;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 34rpx;
  color: #fff;
  font-weight: 500;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  margin-top: 50rpx;
  width: 174rpx;
  height: 60rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 30rpx;
  justify-content: space-around;
  border: 0.5rpx solid rgba(255, 255, 255, 0.2);
}

.navbar-v-line {
  width: 0.5rpx;
  height: 36rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.back-pre, .back-home {
  width: 32rpx;
  height: 32rpx;
  margin-top: 7rpx;
  padding: 10rpx;
}

  