/* pages/info/indexInfo/indexInfo.wxss */
.item_info {
  width: 100%;
  display: flex;
  align-items: center;
}
.item_img {
  padding: 28rpx;
  width: 84rpx;
  height: 84rpx;
}
.item_con {
  width: 80%;
  padding: 28rpx 28rpx 28rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e8ecf1;
}
.item_text {
  width: 80%;
}
.item_text view {
  font-size: 32rpx;
  color: #4c515d;
  font-weight: 600;
}
.item_text text {
  font-size: 28rpx;
  color: #8890a4;
}
.item_text .item_teacher {
  color: #4573ff;
}
.item_go {
  width: 22rpx;
  height: 22rpx;
}
.item_detail {
  display: flex;
  align-items: center;
}
.item_num {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  background-color: #ff5c48;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}
.item_go {
  padding-left: 10rpx;
}