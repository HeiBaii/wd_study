/* pages/info/classInfo/classInfo.wxss */
page{
  background-color: #f3f4f9;
}
.class_info {
  background: #fff;
  position: relative;
  display: flex;
  padding: 28rpx;
}
.class_info::before {
  content: "";
  width: 100%;
  height: 2rpx;
  background-color: #e8ecf1;
  position: absolute;
  left: 28rpx;
  bottom: 0;
}
.home_page view:last-child::before {
  height: 0;
}
.item_img {
  width: 84rpx;
  height: 84rpx;
}
.item_con {
  padding-left: 28rpx;
  width: 85%;
}
.item_red {
  margin-right: 10rpx;
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  border-radius: 7rpx;
  background-color: #ff3d3e;
}
.item_text {
  font-size: 28rpx;
  color: #4c515d;
}
.item_time{
  font-size: 24rpx;
  color: #8890a4;
}
