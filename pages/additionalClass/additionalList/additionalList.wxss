page {
  background-color: #f3f4f9;
}
/* 如果没有数据的情况 */
.noData_bg {
  width: 100%;
  height: 1000rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.noData_img{
  width: 374rpx;
  height: 321rpx; 
}

/* 列表 */
.item_bg {
  background-color: #fff;
  margin-bottom: 170rpx;
}
.item_bg view:last-child {
  border: 0;
}
.item_container {
  margin-left: 28rpx;
  padding: 40rpx 28rpx 40rpx 0;
  border-bottom: 0.5px solid #eee;
}
.subject_state {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subject {
  font-size: 32rpx;
  color: #4c515d;
  font-weight: bold;
  line-height: 50rpx;
}
.state {
  font-size: 28rpx;
  color: #4c78fd;
}
.item_con {
  display: flex;
  justify-content: space-between;
}
.item_text {
  width: 97%;
}
.item_text text {
  display: block;
  font-size: 28rpx;
  color: #4c515d;
  line-height: 46rpx;
}
.item_text text.item_time {
  font-size: 24rpx;
  color: #8890a4;
}
.go_detail {
  width: 21rpx;
  height: 21rpx;
  padding-top: 34rpx;
}
/* 页脚 */
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
  padding: 20rpx 28rpx 0 28rpx;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #4573ff;
  font-size: 32rpx;
  color: #fff;
  border-radius: 40rpx;
}