page {
  background-color: #f3f4f9;
}
.bg {
  margin-bottom: 170rpx;
}
.apply_item {
  padding-top: 20rpx;
}
.apply_subject {
  font-size: 24rpx;
  color: #4c515d;
  padding-left: 28rpx;
  line-height: 60rpx;
}
.item_content {
  background-color: #fff;
}
.item_content view:last-child {
  border: 0;
}
.class_box {
  height: 100rpx;
  padding-right: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 28rpx;
  border-bottom: 0.5rpx solid #eee;
}
.class_content {
  font-size: 28rpx;
}
.class_content text:first-child {
  color: #8890a4;
  display: inline-block;
  width: 170rpx;
  height: 76rpx;
  border-right: 0.5rpx solid #eee;
  line-height: 76rpx;
}
.class_content text:last-child {
  color: #4c515d;
  padding-left: 30rpx;
}
.operation {
  width: 24rpx;
  height: 24rpx;
}
/* 选择附加课班级弹窗 */
.add_class_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.3)
}
.add_class_box {
  width: 100%;
  height: 820rpx;
  position: absolute;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.add_class_title {
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 28rpx;
  border-bottom: 1px solid #eee;
}
.title_box {
  display: flex;
  align-items: center;
}
.title_img {
  width: 32rpx;
  height: 32rpx;
}
.title_text {
  font-size: 32rpx;
  color: #4c515d;
  padding-left: 20rpx;
}
.add_class_close {
  width: 30rpx;
  height: 30rpx;
}
.add_class_con {
  height: 530rpx;
  overflow: auto;
}
.add_class_item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 28rpx;
}
.selected_text {
  box-sizing: border-box;
  color: #4573ff !important;
  background-color: #e3eafe;
  border: 1px solid #a7bdfe;
}
.selected_text .item_text view {
  color: #4573ff;
}
.selected_text .item_text text {
  color: #4573ff;
}
.item_text view {
  font-size: 28rpx;
  color: #4c515d;
}
.item_text text {
  font-size: 24rpx;
  color: #8890a4;
}
.item_img {
  width: 28rpx;
  height: 28rpx;
}
.no_data {
  height: 530rpx;
  text-align: center;
  line-height: 530rpx;
  font-size: 32rpx;
  color: #4c515d;
}
.class_ok {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
  padding: 20rpx 28rpx 0 28rpx;
}
.class_ok .btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #4573ff;
  font-size: 32rpx;
  color: #fff;
  border-radius: 40rpx;
}
/* 页脚 */
.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
  padding: 20rpx 28rpx 0 28rpx;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}
.btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #4573ff;
  font-size: 32rpx;
  color: #fff;
  border-radius: 40rpx;
}