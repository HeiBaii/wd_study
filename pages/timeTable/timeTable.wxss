/* pages/timeTable/timeTable.wxss */
page{
  background-color: #f3f4f9;
}
.date_wrap{
  background-color: #fff;
}
.date-header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.date-now text {
  padding: 10rpx 35rpx;
  font-size: 28rpx;
  color: #4c515d;
  border-left: 1px solid #d4d9de;
}
.date-show{
  position: relative;
  width: 250rpx;
  font-size: 34rpx;
  color: #4c515d;
  font-weight: 600;
  text-align: left;
  padding: 35rpx 0 35rpx 35rpx;
}
.header>view{
  display: inline-block;
  width: 14.285%;
  color: #8890a4;
  font-size: 24rpx;
  text-align: center;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding: 28rpx 0;
}
.weekMark{
  position: relative;
}
.weekMark view{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #4573ff;
}
.date-box{
  font-size: 0;
  padding: 10rpx 0;
}
.date-box>view{
  position: relative;
  display: inline-block;
  width: 14.285%;
  color: #4c515d;
  font-size: 36rpx;
  text-align: center;
  vertical-align: middle;
  margin: 15rpx 0;
}
.date-head{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #4c515d;
}
.nowDay .date-head{
  color: #4573ff;
}
/* 点击后 */
.clickDay .date-head{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #4573ff;
  margin: 0 auto;
}
.curriculum{
  position: absolute;
  left: 50%;
  margin-left: -4rpx;
  top: 65rpx;
}
.curriculum view{
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  float: left;
  margin-right: 6rpx;
}

/* 课程详情 */
.content_box{
  margin-top: 20rpx;
  background-color: #fff;
}
.content_box view:last-child{
  border: none;
}
.content{
  height: 200rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.content_left{
  display: flex;
}
.content_time text{
  display: block;
}
.content_time text:first-child{
  font-size: 36rpx;
  font-weight: 600;
  color: #4c515d;
}
.content_time text:last-child{
  font-size: 28rpx;
  color: #8890a4;
}
.content_type{
  font-size: 20rpx;
  color: #fff;
  display: block;
  width: 42rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 14rpx;
  margin-left: 20rpx;
  margin-top: 6rpx;
}
.content_detail text{
  display: block;
  margin-left: 20rpx;
}
.content_detail text:first-child{
  font-size: 32rpx;
  color: #4c515d;
  font-weight: bold;
}
.content_detail text:nth-child(2){
  font-size: 28rpx;
  color: #8890a4;
  padding: 10rpx 0 0 30rpx;
  background: url("data:image/png;base64,") no-repeat left 18rpx;
background-size:24rpx 24rpx;
}
.content_detail text:last-child{
  font-size: 28rpx;
  color: #8890a4;
  padding-left: 30rpx;
  background: url("data:image/png;base64,") no-repeat left;
  background-size:24rpx 24rpx;
}
.go_datail{
  width: 24rpx;
  height: 24rpx;
  padding-right: 20rpx;
}

/* 无课程情况 */
.no_content{
  padding-top: 90rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.no_content text{
  font-size: 32rpx;
  color: #4c515d;
  font-weight: bold;
  line-height: 70rpx;
}
.no_content view{
  color: #8890a4;
  font-size: 28rpx;
}
/* 课程详情弹框 */
.detail_modal{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0, 0, 0, .2);
  z-index: 9999;
}
.modal_box{
  width: 600rpx;
  height: 800rpx;
  background-color: #fff;
  border-radius: 20rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -300rpx;
  margin-top: -400rpx;
}
.modal_title{
  background: #4573ff;
  width: 540rpx;
  height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.modal_title image{
  width: 30rpx;
  height: 30rpx;
}
.modal_con{
  padding:30rpx;
  font-size: 28rpx;
  color: #4c515d;
  line-height: 50rpx;
}
.modal_con view{
  display: flex;
}
.modal_con view text:first-child{
  color: #8890a4;
  width: 30%;
}